---
import BaseLayout from "../layouts/BaseLayout.astro";
import { skills } from "../data/skills";
---

<BaseLayout title="Portfolio Home">
  <main>
    <section class="hero">
      <div class="hero-text">
        <h1>Hi, I’m Hudson.</h1>
        <p>
          I design and produce small physical and digital objects — from 3D-printed
          miniatures to game art, tooling, and experiments in form and process.
        </p>
        <p>
          This site is a living portfolio: each section breaks down how I work,
          what I’ve made, and how ideas move from concept to finished object.
        </p>
      </div>
      <figure class="hero-photo">
        <img
          src="/images/me.jpg"
          alt="Portrait of Hudson"
          width="420"
          height="420"
          loading="eager"
        />
      </figure>
    </section>

    <section>
      <h2>Skills & Interests</h2>
      <div class="skills-grid">
        {skills.map((s) => (
          <a
            class="skill-card"
            href={`/skills/${s.slug}`}
            data-skill={s.slug}
          >
            <span
              class="skill-icon"
              aria-hidden="true"
              style={`--icon-mask: url('${s.icon}')`}
            ></span>
            <div class="skill-text">
              <span class="skill-title">{s.title}</span>
              {s.blurb && <span class="skill-blurb">{s.blurb}</span>}
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  main {
    display: grid;
    gap: 2.5rem;
  }

  section {
    margin: 0;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    gap: 1rem;
  }

  .skill-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border: 1px solid rgba(148, 163, 184, 0.25);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    background: rgba(15, 23, 42, 0.45);
  }

  .skill-card:hover {
    background: rgba(30, 41, 59, 0.7);
  }

  .skill-icon {
    flex: 0 0 auto;
    width: 64px;
    height: 64px;
  }

  .hero {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 1.5rem;
    align-items: start;
  }

  .skill-text {
    display: grid;
    gap: 0.15rem;
  }

  .skill-title {
    font-weight: 600;
  }

  .skill-blurb {
    font-size: 0.9rem;
    opacity: 0.85;
  }

  .hero-photo {
    margin: 0;
  }

  .hero-photo img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    border: 1px solid rgba(148, 163, 184, 0.25);
  }

  @media (max-width: 760px) {
    .hero {
      grid-template-columns: 1fr;
    }
  }
</style>
