






---
import BaseLayout from "../layouts/BaseLayout.astro";
const skills = [
  { title: "3D Printed Design", href: "/skills/3d-printing", icon: "/icons/3d-print.png" },
  { title: "Game Art", href: "/skills/game-art", icon: "/icons/game-art.png" },
  { title: "Programming", href: "/skills/programming", icon: "/icons/programming.png" },
  { title: "Fiber Arts", href: "/skills/fiber-arts", icon: "/icons/fiber-arts.png" }
];
---



<BaseLayout title="Portfolio Home">
  <main>
  <section class="hero">
  <div class="hero-text">
    <h1>Hi, I’m Hudson.</h1>
    <p>
      I design and produce small physical and digital objects — from 3D-printed
      miniatures to game art, tooling, and experiments in form and process.
    </p>
    <p>
      This site is a living portfolio: each section breaks down how I work,
      what I’ve made, and how ideas move from concept to finished object.
    </p>
  </div>
  <figure class="hero-photo">
    <img
      src="/images/me.jpg"
      alt="Portrait of Hudson"
      width="420"
      height="420"
      loading="eager"
    />
  </figure>

</section>

  <section>
  <h2>Skills & Interests</h2>

  <div class="skills-grid">
    {skills.map((s) => (
      <a class="skill-card" href={s.href}>
        <img class="skill-icon" src={s.icon} alt="" width="32" height="32" loading="lazy" />
        <span>{s.title}</span>
      </a>
    ))}
  </div>
</section>
</main>
</BaseLayout>
<style>
  main {
    max-width: 720px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  .skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
  gap: 1rem;
}

.skill-card {
  display: flex;
  align-items: center;
  gap: .75rem;
  padding: 1rem;
  border: 1px solid #ccc;
  border-radius: 8px;
  text-decoration: none;
}

.skill-card:hover {
  background: #f5f5f5;
}

.skill-icon {
  flex: 0 0 auto;
  width: 32px;
  height: 32px;
  object-fit: contain;
}

  .skills-grid a:hover {
    background: #f5f5f5;
  }
  .hero {
  display: grid;
  grid-template-columns: 1.2fr 0.8fr;
  gap: 1.5rem;
  align-items: start;
}

.hero-photo {
  margin: 0;
}

.hero-photo img {
  width: 100%;
  height: auto;
  border-radius: 10px;
  border: 1px solid #ccc;
}

@media (max-width: 760px) {
  .hero {
    grid-template-columns: 1fr;
  }
}
</style>
