---
import { skills } from "../data/skills";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Portfolio Home">
  <main>
    <section class="hero">
      <div class="hero-text">
        <h1>Hi, I’m Hudson.</h1>
        <p>
          I design and produce small physical and digital objects — from
          3D-printed miniatures to game art, tooling, and experiments in form
          and process.
        </p>
        <p>
          This site is a living portfolio: each section breaks down how I work,
          what I’ve made, and how ideas move from concept to finished object.
        </p>
      </div>
      <figure class="hero-photo">
        <img
          src={`${import.meta.env.BASE_URL}images/me.jpg`}
          alt="Portrait of Hudson"
          width="420"
          height="420"
          loading="eager"
        />
      </figure>
    </section>

    <section>
      <h2>Skills & Interests</h2>
      <div class="skills-grid">
        {
          skills.map((s) => (
            <a
              class="skill-card"
              href={`${import.meta.env.BASE_URL}skills/${s.slug}/`}
              data-skill={s.slug}
            >
              <span
                class="skill-icon"
                aria-hidden="true"
                style={`--icon-mask: url('${import.meta.env.BASE_URL}${s.icon.replace(/^\//, "")}')`}
              />
              <div class="skill-text">
                <span class="skill-title">{s.title}</span>
                {s.blurb && <span class="skill-blurb">{s.blurb}</span>}
              </div>
            </a>
          ))
        }
      </div>
      <!-- <h2>Contact Info</h2> -->
    </section>
  </main>
</BaseLayout>

<style>
  main {
    display: grid;
  }

  section {
    margin: 0;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
    gap: 1rem;
    border-radius: 25px;
  }

  .skill-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 25px;
    text-decoration: none;
    color: inherit;
    background: #12354e;
  }

  .skill-card:hover {
    border-radius: 25px;
    background: rgb(22, 35, 63);
  }

  .skill-icon {
    flex: 0 0 auto;
    width: 64px;
    height: 64px;
  }

  .hero {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 1.5rem;
    align-items: center;
  }

  .skill-text {
    display: grid;
    gap: 0.15rem;
  }

  .skill-title {
    font-weight: 600;
  }

  .skill-card:hover .skill-title,
  .skill-card:focus-visible .skill-title {
    /* text-decoration: underline; */
  }

  .skill-blurb {
    font-size: 0.9rem;
    opacity: 0.85;
  }

  .hero-photo {
    margin: 0;
  }

  .hero-text {
    background-color: #12354e;
    padding: 1.75rem;
    border: 1px solid #5a82b3;
    border-radius: 25px;

    box-shadow: 5px 5px 10px 2px rgba(0, 0, 0, 0.25);
  }

  .hero-photo img {
    width: 100%;
    height: auto;
    border-radius: 10px;
    border: 1px solid #5a82b3;
    border-radius: 25px;
    box-shadow: 5px 5px 10px 2px rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 760px) {
    .hero {
      grid-template-columns: 1fr;
    }
  }
</style>
