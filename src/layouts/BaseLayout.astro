---
export interface Props {
  title?: string;
}

const { title = "Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style>
      :root {
        color-scheme: light;
        font-family: system-ui, sans-serif;
      }

      body {
        margin: 0;
        min-height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
        background: #f7f7f7;
        color: #111;
      }

      header,
      footer {
        background: #fff;
        border-color: #ddd;
        border-style: solid;
        border-width: 0;
        padding: 1rem;
      }

      header {
        border-bottom-width: 1px;
      }

      footer {
        border-top-width: 1px;
      }

      nav {
        display: flex;
        gap: 1rem;
      }

      a {
        color: inherit;
      }

      main {
        width: min(60rem, 100% - 2rem);
        margin: 0 auto;
        padding: 2rem 0;
      }
    </style>
  </head>
  <body>
    <header>
      <nav aria-label="Primary">
        <a href="/">Home</a>
        <a href="/skills">Skills</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <small>Portfolio footer placeholder</small>
    </footer>
  </body>
</html>
