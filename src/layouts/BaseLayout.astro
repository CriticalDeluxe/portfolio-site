---
export interface Props {
  title?: string;
}

const { title = "Portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
const navPath = currentPath.startsWith(base)
  ? currentPath.slice(base.length - 1)
  : currentPath;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href={`${import.meta.env.BASE_URL}styles/global.css`}
    />
  </head>
  <body>
    <header class="site-header">
      <div class="site-shell">
        <a class="brand-link" href={base}>Hudson Bennett Portfolio</a>
        <nav class="site-nav" aria-label="Primary">
          <a href={base} aria-current={navPath === "/" ? "page" : undefined}
            >Home</a
          >
          <a
            href={`${base}skills/`}
            aria-current={navPath.startsWith("/skills")
              ? "page"
              : undefined}
          >
            Skills
          </a>
        </nav>
      </div>
    </header>

    <div class="page-shell">
      <slot />
    </div>

    <footer class="site-footer">
      <div class="site-shell">
        <small>&copy; {new Date().getFullYear()} Hudson</small>
      </div>
    </footer>
  </body>
</html>
