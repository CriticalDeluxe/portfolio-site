---
export interface Props {
  title?: string;
}

const { title = "Portfolio" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="site-shell">
        <a class="brand-link" href="/">Hudson Portfolio</a>
        <nav class="site-nav" aria-label="Primary">
          <a href="/" aria-current={currentPath === "/" ? "page" : undefined}>Home</a>
          <a
            href="/skills"
            aria-current={currentPath.startsWith("/skills") ? "page" : undefined}
          >
            Skills
          </a>
        </nav>
      </div>
    </header>

    <div class="page-shell">
      <slot />
    </div>

    <footer class="site-footer">
      <div class="site-shell">
        <small>&copy; {new Date().getFullYear()} Hudson</small>
      </div>
    </footer>
  </body>
</html>
